<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_42DP"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="gotoregClick"
        android:singleLine="true"
        android:layout_gravity="end"
        android:paddingRight="@dimen/DIMEN_24DP"
        android:text="@string/reg"
        android:textColor="@color/blue_cc0099e0"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/DIMEN_34DP"
        android:src="@drawable/dosnap_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/DIMEN_60DP"
        android:layout_marginRight="@dimen/DIMEN_60DP"
        android:layout_marginTop="@dimen/DIMEN_40DP"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_30DP"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:hint="@string/phoneandmail"
            android:textColorHint="@color/gray_c5"
            android:inputType="text"
            android:singleLine="true"
            android:text="17717655870"
            android:layout_marginLeft="@dimen/DIMEN_5DP"
            android:layout_marginBottom="@dimen/DIMEN_5DP"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/color_cursor" />

        <ImageButton
            android:id="@+id/imgBtn_Loginclean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:padding="@dimen/DIMEN_5DP"
            android:onClick="loginClean"
            android:visibility="gone"
            android:src="@drawable/icon_close" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/DIMEN_60DP"
        android:layout_marginRight="@dimen/DIMEN_60DP"
        android:background="@color/blue_cc0099e0" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_8DP"
        android:layout_marginLeft="@dimen/DIMEN_60DP"
        android:layout_marginRight="@dimen/DIMEN_60DP"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="@dimen/DIMEN_30DP"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="bottom"
            android:text="schumi28"
            android:textColorHint="@color/gray_c5"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_marginBottom="@dimen/DIMEN_5DP"
            android:layout_marginLeft="@dimen/DIMEN_5DP"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textCursorDrawable="@drawable/color_cursor" />

        <ImageButton
            android:id="@+id/imgBtn_Loginshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/DIMEN_5DP"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:onClick="showPsw"
            android:src="@drawable/icon_eyes" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/DIMEN_60DP"
        android:layout_marginRight="@dimen/DIMEN_60DP"
        android:background="@color/blue_cc0099e0" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_38DP"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/DIMEN_60DP"
        android:layout_marginRight="@dimen/DIMEN_60DP"
        android:layout_marginTop="@dimen/DIMEN_20DP"
        android:background="@drawable/rounded_edittext5_green"
        android:clickable="true"
        android:gravity="center"
        android:onClick="loginBtnClick"
        android:text="@string/login"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/DIMEN_6DP"
        android:layout_marginRight="@dimen/DIMEN_60DP"
        android:layout_gravity="end"
        android:clickable="true"
        android:gravity="top"
        android:onClick="forgetClick"
        android:singleLine="true"
        android:textColor="@color/gray_c5"
        android:text="@string/forget"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/divider_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/DIMEN_10DP"
            android:layout_marginRight="@dimen/DIMEN_10DP"
            android:text="@string/fastlogin"
            android:textColor="@color/gray_c5"
            android:textSize="12dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="@color/divider_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_10DP"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:clickable="true"
            android:onClick="loginwechatClick"
            android:text="@string/weichat"
            android:textColor="@color/gray_c5"
            android:drawablePadding="@dimen/DIMEN_3DP"
            android:drawableTop="@drawable/icon_weixin" />

        <TextView
            android:id="@+id/tv_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:clickable="true"
            android:onClick="loginweiboClick"
            android:text="@string/weibo"
            android:textColor="@color/gray_c5"
            android:drawablePadding="@dimen/DIMEN_3DP"
            android:drawableTop="@drawable/icon_weibo" />
    </LinearLayout>

</LinearLayout>