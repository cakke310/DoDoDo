<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">
    </FrameLayout>

    <RadioGroup
        android:id="@+id/rbs_fragment"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            style="@style/tabStyle"
            android:id="@+id/rb_main"
            android:background="@drawable/bar_main_bg"
            />

        <RadioButton
            style="@style/tabStyle"
            android:id="@+id/rb_serarch"
            android:background="@drawable/bar_search_bg"
            />

        <RadioButton
            style="@style/tabStyle"
            android:id="@+id/rb_camera"
            android:background="@drawable/bar_camera_bg"
            />

        <RadioButton
            style="@style/tabStyle"
            android:id="@+id/rb_message"
            android:background="@drawable/bar_message_bg"
            />

        <RadioButton
            style="@style/tabStyle"
            android:id="@+id/rb_my"
            android:background="@drawable/bar_my_bg"
            />
    </RadioGroup>


</LinearLayout>
